<p id="notice"><%= notice %></p>

<h1>Chef Configs</h1>

<table>
  <thead>
    <tr>
      <th>Business unit</th>
      <th>Chef server url</th>
      <th>Chef organization</th>
      <th>Admins</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chef_configs.each do |chef_config| %>
      <tr>
        <td><%= chef_config.business_unit %></td>
        <td><%= chef_config.chef_server_url %></td>
        <td><%= chef_config.chef_organization %></td>
        <td><%= chef_config.admins %></td>
        <td><%= link_to 'Show', chef_config %></td>
        <td><%= link_to 'Edit', edit_chef_config_path(chef_config) %></td>
        <td><%= link_to 'Destroy', chef_config, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

