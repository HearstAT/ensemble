<p id="notice"><%= notice %></p>

<h1>New Relic Reports</h1>

<table>
  <thead>
    <tr>
      <th>Business unit</th>
      <th>Application ID</th>
      <th>Name</th>
      <th>Language</th>
      <th>Health Status</th>
      <th>Reporting</th>
      <th>Last Reported At</th>
      <th>Response Time</th>
      <th>Throughput</th>
      <th>Error Rate</th>
      <th>AppDex Target</th>
      <th>AppDex Score</th>
      <th>Host Count</th>
      <th>Instance Count</th>
      <th>Updated At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @new_relic_applications.each do |new_relic_application| %>
      <% business_unit_name = '' %>
      <% @new_relic_configs.each do |nrc| %>
        <% business_unit_id = nrc.business_unit_id if new_relic_application.new_relic_config_id == nrc.id %>
        <% @business_units.each do |bu| %>
          <% business_unit_name = bu.name if bu.id == business_unit_id %>
        <% end %>
      <% end %>
      <tr>
        <td><%= business_unit_name %></td>
        <td><%= new_relic_application.new_relic_application_id %></td>
        <td><%= new_relic_application.name %></td>
        <td><%= new_relic_application.language %></td>
        <td><%= new_relic_application.health_status %></td>
        <td><%= new_relic_application.reporting %></td>
        <td><%= new_relic_application.last_reported_at %></td>
        <td><%= new_relic_application.response_time %></td>
        <td><%= new_relic_application.throughput %></td>
        <td><%= new_relic_application.error_rate %></td>
        <td><%= new_relic_application.apdex_target %></td>
        <td><%= new_relic_application.apdex_score %></td>
        <td><%= new_relic_application.host_count %></td>
        <td><%= new_relic_application.instance_count %></td>
        <td><%= new_relic_application.updated_at %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New New Relic Report', new_new_relic_report_path %>
